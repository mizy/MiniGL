{
  // 更改此项以匹配您的项目
  "include": ["src/**/*"],
  "compileOnSave": true,
  "compilerOptions": {
    "pretty": true,
    "sourceMap": true,
    "allowJs": true,
    "declaration": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "module": "esnext",
    "target": "es6",
    "resolveJsonModule": true,
    "moduleResolution": "node"
  }
}